<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10px"
    tools:ignore="RtlSymmetry">

    <TextView
        android:text="Title: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:paddingLeft="10px" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et1"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignStart="@+id/et2"
        android:paddingLeft="10px"
        android:hint="Another Fine Myth" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et2"
        android:textColor="@android:color/black"
        android:paddingLeft="10px"
        android:layout_below="@+id/et1"
        android:layout_toEndOf="@+id/textView14"
        android:hint="Robert Asprin" />

    <TextView
        android:text="Author: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textColor="@android:color/black"
        android:paddingLeft="10px"
        android:layout_alignBaseline="@+id/et2"
        android:layout_alignBottom="@+id/et2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et3"
        android:textColor="@android:color/black"
        android:paddingLeft="10px"
        android:hint="B00-FOF9FV6"
        android:layout_below="@+id/et2"
        android:layout_alignStart="@+id/et2" />

    <TextView
        android:text="Hourly Fee:   $"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textColor="@android:color/black"
        android:paddingLeft="10px"
        android:layout_alignBaseline="@+id/et4"
        android:layout_alignBottom="@+id/et4"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="ISBN: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textColor="@android:color/black"
        android:paddingLeft="10px"
        android:layout_alignBaseline="@+id/et3"
        android:layout_alignBottom="@+id/et3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDisplay"
        android:layout_below="@+id/et4"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et4"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:paddingLeft="10px"
        android:layout_below="@+id/et3"
        android:layout_toEndOf="@+id/textView16"
        android:hint="0.0" />

    <Button
        android:text="Display Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b3"
        android:textSize="12sp"
        android:layout_above="@+id/et4"
        android:layout_toEndOf="@+id/et2" />

    <TextView
        android:text="Adding New Book Information."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:paddingLeft="10px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:textColor="@android:color/black"
        android:text="is the information is correct?"
        android:layout_above="@+id/b1"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Yes"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/b2"
        android:layout_alignBottom="@+id/b2"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginStart="11dp" />

    <Button
        android:text="NO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:layout_marginBottom="53dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/et4" />
</RelativeLayout>