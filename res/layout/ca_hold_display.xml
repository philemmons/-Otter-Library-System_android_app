<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ca_hold_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vader.proj2part3.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et1"
        android:textSize="14sp"
        android:hint="Username"
        android:layout_below="@+id/textView24"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:layout_below="@+id/et1"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Attempts: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView26"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_below="@+id/b2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCount"
        android:textColor="@android:color/black"
        android:layout_below="@+id/b1"
        android:layout_toEndOf="@+id/textView26" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et3"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/b1"
        android:layout_alignParentEnd="true"
        android:width="80dp"
        android:hint="0000" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView24"
        android:textColor="@android:color/black"
        android:layout_alignStart="@+id/textView29"
        android:layout_below="@+id/tv1" />

    <TextView
        android:text="Cancel Hold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Enter Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et3"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView34"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et2"
        android:hint="password"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/et1"
        android:layout_alignBottom="@+id/et1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Your Selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView28"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/et2"
        android:layout_below="@+id/textView33">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDisplay" />
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView28"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tvCount"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="All Reservations by User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView33"
        android:layout_below="@+id/textView28"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:text="Select Reservation"
        android:layout_alignBaseline="@+id/b1"
        android:layout_alignBottom="@+id/b1"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_toEndOf="@+id/tv1">

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/tvOut"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView28"
            android:layout_marginTop="33dp"
            android:layout_alignEnd="@+id/scrollView4"
            android:layout_width="match_parent"
            android:layout_toEndOf="@+id/tv1" />
    </ScrollView>

    <Button
        android:text=" Confirm "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b3"
        android:layout_marginBottom="92dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:textColor="@android:color/black"
        android:layout_above="@+id/et2"
        android:layout_alignParentEnd="true" />

</RelativeLayout>